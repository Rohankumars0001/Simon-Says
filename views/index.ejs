<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simon Says Game</title>

    <!-- ✅ Bootstrap CSS (same version as JS) -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />

    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      rel="stylesheet"
    />

    <!-- Your custom styles -->
    <link rel="stylesheet" href="/style.css" />
    <link rel="stylesheet" href="/login.css" />
  </head>
  <body>
    <h1>Simon Says Game</h1>
    <h2>Press any key to start the game</h2>
    <p id="message"></p>

    <div class="btn-con">
      <div class="line-one">
        <button class="btn red" id="red">1</button>
        <button class="btn yellow" id="yellow">2</button>
      </div>
      <div class="line-two">
        <button class="btn blue" id="blue">3</button>
        <button class="btn white" id="white">4</button>
      </div>
    </div>

    <!-- Your game logic -->
    <script src="/game.js"></script>

    <!-- ✅ Bootstrap JS (same version as CSS) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
