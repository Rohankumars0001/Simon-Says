<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/login.css" />
    <title>Signup</title>
  </head>
  <body>
    <div class="login-page">
      <div class="login-box">
        <h2 class="login-heading">Signup Here</h2>
        <form action="/signup" method="POST" class="login-form">
          <div class="login-field">
            <label for="username" class="login-label">Username</label>
            <input
              type="text"
              id="username"
              name="username"
              class="login-input"
              required
            />
          </div>
          <div class="login-field">
            <label for="email" class="login-label"
              >Email &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label
            >
            <input
              type="text"
              id="email"
              name="email"
              class="login-input"
              required
            />
          </div>
          <div class="login-field">
            <label for="password" class="login-label">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="login-input"
              required
            />
          </div>
          <button type="submit" class="login-button">Jump in</button>
          <a href="/login">have a account? Login here</a>
        </form>
      </div>
    </div>
  </body>
</html>
